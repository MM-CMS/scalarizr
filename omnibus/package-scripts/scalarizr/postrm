#!/bin/bash
#
# Perform necessary scalarizr removal steps
# after package is uninstalled.
#

if ( [ "$1" = '1' ] || [ "$1" = 'upgrade' ] ); 
    unlink /etc/init.d/scalarizr 
    unlink /etc/init.d/scalr-upd-client
    echo "scalarizr has been uninstalled!"
else
    echo "scalarizr has been upgraded!"
fi

exit 0
